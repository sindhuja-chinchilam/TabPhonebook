<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.xinthe.tabphonebook.NewOrEditContact">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="400dp"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/colorOrange"

        android:id="@+id/linearLayout"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"></LinearLayout>

    <TextView
        android:layout_width="220dp"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="NEW/EDIT CONTACT"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textColor="@color/colorWhite"
        android:textStyle="bold" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignTop="@+id/fname">



    </LinearLayout>

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/back"
        android:layout_alignParentTop="true"
        android:src="@drawable/backbutton"
        android:background="@color/colorOrange"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="First Name*"
        android:id="@+id/fname"
        android:layout_below="@+id/linearLayout"
        android:layout_alignLeft="@+id/linearLayout"
        android:layout_alignStart="@+id/linearLayout"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Last Name*"
        android:id="@+id/lname"
        android:layout_below="@+id/fname"
        android:layout_alignLeft="@+id/fname"
        android:layout_alignStart="@+id/fname"
        android:layout_marginTop="90dp"
        android:textStyle="bold"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Phone Number*"
        android:id="@+id/phnno"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="330dp"
        android:layout_marginLeft="90dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Nick Name*"
        android:id="@+id/nickname"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="460dp"
        android:layout_marginLeft="90dp"/>

    <EditText
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/frstname"
        android:layout_alignTop="@+id/fname"
        android:layout_alignRight="@+id/linearLayout"
        android:layout_alignEnd="@+id/linearLayout"
        android:maxLength="15"
        android:layout_marginRight="60dp"
        android:background="@drawable/textbox"/>

    <EditText
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/lastname"
        android:background="@drawable/textbox"
        android:maxLength="15"
        android:layout_alignTop="@+id/lname"
        android:layout_alignLeft="@+id/frstname"
        android:layout_alignStart="@+id/frstname" />
    <EditText
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/phno"
        android:background="@drawable/textbox"
        android:maxLength="10"
        android:layout_marginTop="330dp"
        android:layout_marginLeft="310dp"
        android:layout_weight="1" />
    <EditText
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/nick"
        android:background="@drawable/textbox"
        android:layout_marginTop="460dp"
        android:layout_marginLeft="310dp"
        android:layout_weight="1"
        android:maxLength="6"/>


    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/editcntct"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/lname"
        android:layout_alignStart="@+id/lname"
        android:layout_marginBottom="300dp"
        android:layout_marginLeft="200dp"
        android:background="@drawable/greenicon"
        android:src="@drawable/ic_done"/>

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/clear"
        android:layout_alignTop="@+id/editcntct"
        android:layout_marginLeft="450dp"
        android:src="@drawable/ic_clear"
        android:background="@drawable/icons"
        android:layout_alignLeft="@+id/linearLayout" />

</RelativeLayout>
